{
  "name": "@donnerknalli/webgpu-utils",
  "version": "0.0.1",
  "author": "hsimpson",
  "description": "WebGPU Utilities",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hsimpson/webgpu-utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "check-types": "tsc --noemit",
    "lint:ts": "eslint . --fix",
    "lint": "yarn check-types && yarn lint:ts",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "build": "yarn lint && yarn format:check && tsup",
    "watch": "tsup --watch",
    "link": "npm link",
    "npm:publish": "yarn build && npm publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.5",
    "@webgpu/types": "^0.1.49",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0"
  },
  "dependencies": {
    "wgpu-matrix": "^3.2.0"
  }
}
