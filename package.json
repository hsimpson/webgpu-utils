{
  "name": "@donnerknalli/webgpu-utils",
  "version": "0.0.1",
  "author": "hsimpson",
  "description": "WebGPU Utilities",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hsimpson/webgpu-utils"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "check-types": "tsc --noemit",
    "lint:ts": "eslint . --fix",
    "lint": "yarn check-types && yarn lint:ts",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "build": "yarn lint && yarn format:check && tsup",
    "watch": "tsup --watch",
    "link": "npm link",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "npm:publish": "yarn test && yarn build && npm publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.13.10",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "@webgpu/types": "^0.1.56",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "playwright": "^1.51.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8"
  },
  "dependencies": {
    "wgpu-matrix": "^3.3.0"
  }
}
