{
  "name": "@donnerknalli/webgpu-utils",
  "version": "0.0.3",
  "author": "hsimpson",
  "description": "WebGPU Utilities",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hsimpson/webgpu-utils"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "lint:ts": "eslint . --fix",
    "lint": "yarn check-types && yarn lint:ts",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "build": "tsup",
    "watch": "tsup --watch",
    "link": "npm link",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "npm:publish": "yarn format:check && yarn build && yarn format:check && yarn test && npm publish",
    "examples": "vite --config examples/vite.config.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "^22.14.1",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@webgpu/types": "^0.1.60",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.2",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "wgpu-matrix": "^3.4.0"
  }
}
